                @Html.DisplayNameFor(model => model.DesignacaoProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QTDisponivel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoProduto)
