            <td>
                @Html.DisplayFor(modelItem => item.DesignacaoProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QTDisponivel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoProduto)
            </td>
